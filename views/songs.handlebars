<body class='songs'>
    {{> header}}
    <nav class="playlistNav">
        <ul>
            <li><a href='/playlist'>Playlist</a></li>
            <li><a class='current' href='/songs'>Add songs</a></li>
        </ul>
    </nav>
    {{#if success}}
    <section>
        <h2>Song has been added to your playlist!</h2>
    </section>
    {{ else }}
    {{#if errors}}
    <section>
        <ul>
            {{#each errors}}
            <li>{{this.msg}}</li>
            {{/each}}
        </ul>
    </section>
    {{/if}}
    <form action="/songs" method="post">
        <div class="form-card">
            <label for='songName'>Song name</label>
            <input type='text' name='songName'>
            <label for='artistName'>Artist name</label>
            <input type='text' name='artistName'>
            <input type='button' value='&#43;' id='add'>
            <input type='submit' value="Add songs">
        </div>
    </form>
    {{/if}}
</body>